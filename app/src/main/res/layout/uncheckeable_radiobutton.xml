<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal">

    <org.eyeseetea.malariacare.views.TextCard
        android:id="@+id/radio_text"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="0.65"
        android:gravity="left|center_vertical"
        android:textColor="@color/intColor"
        android:textSize="@dimen/radio_button_option"
        app:tDimension="@string/font_size_level1"
        app:tFontName="@string/condensed_font_name" />

    <org.eyeseetea.malariacare.views.CustomRadioButton xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/radio_button"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="0dp"
        android:layout_weight="0.35"
        android:button="@drawable/radiobutton"
        android:gravity="right|center_vertical"
        android:paddingRight="0dp" />

</LinearLayout>